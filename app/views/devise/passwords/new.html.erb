<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for resource, as: resource_name, url: new_user_password_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
      <h1 class="h3 mb-3 font-weight-normal text-center">New password</h1>
        <%= render "devise/shared/error_messages", resource: resource %>
<br><br>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
<br><br>
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
<br><br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>